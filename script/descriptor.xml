	<plugin name="smtp">
		<description> This plugin executes shell commands </description>
		<taskList>
			<task>
				<description> Netcat connection</description>
				<command> nc -v -z -w5 %domain %port </command>
			</task>
			<task>
				<description> Telnet connection</description>
				<command> ./telnet.exp %domain %port </command>
			</task>
		</taskList>
	</plugin>
</taskrunner>
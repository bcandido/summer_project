<!DOCTYPE taskrunner SYSTEM "descriptor.dtd">
<taskrunner>
	<plugin name="shell">
<!-- 		<description> This plugin executes shell commands </description> -->
		<taskList>
			<!--<task>
				<description> displays files in the directory </description>

<?xml version="1.0" encoding="utf-8"?>
<taskrunner>
	<plugin name="shell">
		<description> This plugin executes shell commands </description>
		<taskList>
			<task>
				<description> displays files in the directory </description>
				<command> ls </command>
			</task>
			<task>
				<command>ls | grep wc -l</command>
				<description> show the processes running </description>
			</task>
		</taskList>
	</plugin>
	<plugin name="smtp">
		<description> This plugin executes shell commands </description>
		<taskList>
			<task>
				<description> displays files in the directory </description>
				<command name="list"> ls %PATH -al </command>
			</task>
			<task>
				<description> home path </description>
				<command name="list"> ls -al </command>
			</task>
		</taskList>
	</plugin>
</taskrunner>